{
    "manifest_version": 3,
    "name": "MergeFund",
    "version": "1.0.0",
    "description": "Track GitHub repositories right from your toolbar",
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://api.github.com/*"
    ]
  }
  